{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@ctypes/*": ["./types/*"],
      "@models": ["./src/models"],
      "@routes/*": ["./src/routes/*"],
      "@src/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
    }
  },
  "lib": ["es2015"]
}
